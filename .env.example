# Environment Variables Example
# Copy this file to .env.local for local development
# NEVER commit .env.local to version control!

# =============================================================================
# GitHub API Configuration (Phase 4)
# =============================================================================
# Required for GitHub integration features (contribution graphs, repo stats)
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo:status, public_repo, read:user
GITHUB_API_TOKEN=ghp_your_github_personal_access_token_here

# =============================================================================
# Analytics Configuration
# =============================================================================
# Google Analytics tracking ID
# Format: G-XXXXXXXXXX (GA4) or UA-XXXXXXXXX-X (Universal Analytics)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# Application Configuration
# =============================================================================
# Application environment (development, production)
APP_ENV=development

# Application base URL (used for canonical URLs, Open Graph tags)
APP_BASE_URL=http://localhost:4200

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features at runtime
ENABLE_GITHUB_INTEGRATION=false
ENABLE_ANALYTICS=false
ENABLE_SERVICE_WORKER=false
ENABLE_DEBUG_LOGGING=true

# =============================================================================
# API Configuration
# =============================================================================
# API timeouts (milliseconds)
API_TIMEOUT=30000

# API retry configuration
API_MAX_RETRIES=3
API_RETRY_DELAY=1000

# =============================================================================
# Performance Configuration
# =============================================================================
# Network latency simulation for development (milliseconds)
LATENCY_MIN=500
LATENCY_MAX=1000
LATENCY_ENABLED=true

# Cache configuration (milliseconds)
CACHE_TTL_DEFAULT=3600000
CACHE_TTL_GITHUB=1800000
CACHE_MAX_SIZE=100

# =============================================================================
# Security Configuration
# =============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:4200,https://moodyjw.github.io

# Content Security Policy (CSP) directives
CSP_ENABLED=true

# =============================================================================
# Build Configuration
# =============================================================================
# Build optimization settings
BUILD_OPTIMIZATION=true
BUILD_SOURCE_MAPS=false
BUILD_EXTRACT_LICENSES=true

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable console logging in production
LOG_PRODUCTION=false

# =============================================================================
# Testing Configuration
# =============================================================================
# Test coverage threshold (percentage)
TEST_COVERAGE_THRESHOLD=80

# Visual regression test update mode
PLAYWRIGHT_UPDATE_SNAPSHOTS=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Create .env.local from this template for local development
# 2. Add .env.local to .gitignore (already configured)
# 3. Use GitHub Secrets for production environment variables
# 4. Never commit sensitive tokens or API keys
# 5. For GitHub Pages deployment, configure secrets in repo settings:
#    Settings > Secrets and variables > Actions > New repository secret
